<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-custom rounded", local: true, data: { turbo: false })  do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-lable" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "article title" %>
          </div>
        </div>
        <div class="form-group row mt-4">
          <%= f.label :description, class: "col-2 col-form-lable" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 8, class:"form-control", placeholder: "Description" %>
          </div>
        </div>
        <div class="form-group text-center mt-4">
          <%= f.submit class: "btn btn-outline-success btn-md"%>
        </div>
      <% end %>
      <p class="text-center"> <%= link_to '[ Return to articles ]', articles_path, class: "text-success link-cust"%> </p>
    </div>
  </div>
</div>
