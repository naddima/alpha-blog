<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-custom rounded", local: true, data: { turbo: false })  do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-lable" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
          </div>
        </div>
        <div class="form-group row mt-4">
          <%= f.label :email, class: "col-2 col-form-lable" %>
          <div class="col-10">
            <%= f.text_area :email, class:"form-control", placeholder: "Enter email" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-lable" %>
          <div class="col-10">
            <%= f.text_field :password, class: "form-control", placeholder: "Enter password" %>
          </div>
          <div class="form-group text-center mt-4">
            <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-success btn-md")%>
          </div>
        <% end %>
        <p class="text-center"> <%= link_to '[ Return to articles ]', articles_path, class: "text-success link-cust"%> </p>
      </div>
    </div>
  </div>
