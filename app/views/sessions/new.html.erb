<h1 class="text-center mt-4">Log in:</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, class: "shadow p-3 mb-3 bg-custom rounded", url: login_path, local: true, data: { turbo: false })  do |f| %>
        <div class="form-group row mt-4">
          <%= f.label :email, class: "col-2 col-form-lable" %>
          <div class="col-10">
            <%= f.text_area :email, class:"form-control", placeholder: "Enter your email" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-lable" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
          </div>
          <div class="form-group text-center mt-4">
            <%= f.submit "Log in", class: "btn btn-outline-success btn-md"%>
          </div>
        <% end %>
        <p class="text-center"> <%= link_to '[ Cancel and return to articles ]', articles_path, class: "text-success link-cust"%> </p>
      </div>
    </div>
  </div>
