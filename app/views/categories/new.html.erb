<h1 class="text-center mt-4">Create a new category</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-custom rounded", local: true, data: { turbo: false })  do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name", class: "col-2 col-form-lable" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
          </div>
          <div class= "form-group text-center mt-4">
            <%= f.submit "Create", class: "btn btn-outline-success btn-md"%>
          </div>
        <% end %>
      </div>
      <p class="text-center"> <%= link_to '[ Return to articles ]', articles_path, class: "text-success link-cust"%> </p>
    </div>
  </div>