<h1 class="text-center mt-4">Category: <%= @category.name%></h1>
<div class="text-center">
  <% if logged_in? && current_user.admin? %>
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-success"%>
  <% end %>
</div>
<h3 class="text-center mt-4">Articles</h3>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<%= render 'articles/article' %>
<div class="flickr_pagination mb-5">
  <%= will_paginate @articles, :container => false %>
</div>
